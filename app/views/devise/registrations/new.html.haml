.ui.middle.aligned.center.aligned.grid.registration-form
  .column.narrow-form
    %h2.ui.blue.image.header
      = image_tag('Hero-Face.png', class: 'image')
      .content Create your account
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui large form' }) do |f|
      .ui.stacked.segment
        .field
          = f.label :email
          .ui.left.icon.input
            %i.user.icon
            = f.email_field :email, autofocus: true

        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autocomplete: "off"
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off"
        = f.submit "Sign up", class: 'ui fluid large blue submit button'
    = devise_error_messages!
    .ui.message
      already have an account? #{link_to 'log in', new_user_session_path}
